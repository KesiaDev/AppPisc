<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardProfileImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_profile_placeholder"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Psicólogo"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/bronze_gold" />

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Psicólogo(a)"
                    android:textColor="@color/bronze_gold"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cardLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_novo"
                android:contentDescription="Logo PsiPro" />
        </LinearLayout>

        <TextView
            android:id="@+id/cardCrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRP 00/00000"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/cardSpecialties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Especialidades"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/cardAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre o psicólogo"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Modalidades de atendimento"
                    android:textColor="@color/bronze_gold"
                    android:textStyle="bold"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/cardModalities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presencial, Online"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Horários de atendimento"
                    android:textColor="@color/bronze_gold"
                    android:textStyle="bold"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/cardSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seg–Sex, 8h–18h"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_whatsapp"
                android:tint="@color/bronze_gold"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/cardWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(00) 00000-0000"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginStart="6dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_email"
                android:tint="@color/bronze_gold"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/cardEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@exemplo.com"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_location_on"
                android:tint="@color/bronze_gold"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/cardAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/cardLanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Português, Inglês"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/cardSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redes sociais"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/cardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição do psicólogo"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/cardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGENDAR CONSULTA"
            android:backgroundTint="@color/bronze_gold"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:drawableEnd="@drawable/ic_check" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 