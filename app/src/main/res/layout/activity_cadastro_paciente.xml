<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Paciente"
            android:textColor="@color/bronze_gold"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center"/>

        <!-- Nome Completo -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nomeEditText"
                style="@style/LoginInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome completo"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CPF -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cpfEditText"
                style="@style/LoginInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Data de Nascimento -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dataNascimentoEditText"
                style="@style/LoginInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de nascimento"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Telefone -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/telefoneEditText"
                style="@style/LoginInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Informações Clínicas -->
        <TextView
            android:id="@+id/infoClinicasTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informações clínicas"
            android:textColor="@color/bronze_gold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/historicoEditText"
                style="@style/LoginInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Informações clínicas"
                android:minLines="3"
                android:maxLines="6"
                android:gravity="top|start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Informações Financeiras -->
        <TextView
            android:id="@+id/financeiroTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informações financeiras"
            android:textColor="@color/bronze_gold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/valorSessaoEditText"
                style="@style/LoginInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor da sessão"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/diaCobrancaEditText"
                style="@style/LoginInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dia da cobrança"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/lembreteCobrancaSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ativar lembrete de cobrança mensal"
            android:layout_marginTop="16dp"
            android:textColor="@color/bronze_gold"/>

        <!-- Contato de Emergência -->
        <TextView
            android:id="@+id/contatoEmergenciaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contato de emergência"
            android:textColor="@color/bronze_gold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contatoNomeEditText"
                style="@style/LoginInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do contato de emergência"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contatoWhatsappEditText"
                style="@style/LoginInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="WhatsApp do contato de emergência"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botão Salvar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/salvarButton"
            style="@style/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.CircularProgressIndicator"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView> 